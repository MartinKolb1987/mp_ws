{
    "options": {
        "tourGuideAppend": "#app",
        "tourGuideDefaultStructure": "<div id=\"tour-guide-overlay\"><div id=\"tour-guide-title\"></div><div id=\"tour-guide-close\"></div><div id=\"tour-guide-info\"></div><div id=\"tour-guide-pagination\"></div><div id=\"tour-guide-prev\"></div><div id=\"tour-guide-next\"></div></div><div id=\"tour-guide-hint\"><img src=\"images/tutorial_arrow.svg\"></div>",
        "tourGuideOverlay": {
            "target": "#tour-guide-overlay"
        },
        "tourGuideTitle": {
            "target": "#tour-guide-title",
            "content": "2. Downvote Track & DJ Image"
        },
        "tourGuideClose": {
            "target": "#tour-guide-close",
            "content": "x"
        },
        "tourGuideNext": {
            "target": "#tour-guide-next",
            "content": ""
        },
        "tourGuidePrev": {
            "target": "#tour-guide-prev",
            "content": ""
        },
        "tourGuidePagination": {
            "target": "#tour-guide-pagination",
            "content": "%from% / %to%"
        },
        
        "fadeInTourGuide": false,
        "fadeInTourGuideTime": 1000,
        "fadeOutTourGuide": true,

        "preloadPrevTourGuide": "uploadTrack",
        "prevTourGuideButtonContent": "Previous Chapter",

        "tourGuideHint": "#tour-guide-hint",
        "tourGuideHintFadeInTime": 150
    },
    "tourPoints": [
        {
            "elements": ["#currently-playing", "#system-info-wrapper", "#downvote-button::hint::top::25px::left::35px::rotate::140deg"],
            "info": {
                "target": "#tour-guide-info",
                "content": "<div class=\"tour-guide-info-title\">Downvote!</div><div class=\"tour-guide-info-content\">Du magst das aktuelle Lied <b>nicht</b>? Dann klicke auf den <b>Downvote</b> Knopf. Bei genügend Downvotes wird das Lied <b>abgebrochen</b>.</div>",
                "positionCss": "top::400px::height::40vh"
            }
        },
        {
            "elements": ["#currently-playing", "#system-info-text::hint::top::-25px::left::-40px::rotate::190deg"],
            "info": {
                "target": "#tour-guide-info",
                "content": "<div class=\"tour-guide-info-title\">DJ Bild</div><div class=\"tour-guide-info-content\">Wenn du dein eigenes <b>DJ Bild</b> hochladen möchtest, klicke einfach auf das Bild.</div>",
                "positionCss": "top::400px::height::40vh"
            }
        },
        {
            "elements": ["#dj-image-wrapper", "#image-upload-wrapper", "#trigger-upload-image::hint::top::40px::left::-10px::rotate::180deg"],
            "info": {
                "target": "#tour-guide-info",
                "content": "<div class=\"tour-guide-info-title\">Bildauswahl</div><div class=\"tour-guide-info-content\">Sucher dir ein Bild aus deinem <b>Smartphonespeicher</b>!</div>",
                "positionCss": "top::460px::height::40vh"
            }
        },
        {
            "elements": ["#dj-image-wrapper", "#image-upload-wrapper", ".image-text", "#upload-image::hint::top::40px::left::-10px::rotate::180deg"],
            "info": {
                "target": "#tour-guide-info",
                "content": "<div class=\"tour-guide-info-title\">Und los!</div><div class=\"tour-guide-info-content\">Benutze den <b>Upload Knopf</b> um dein Bild hochzuladen. Oder mache deine Auswahl <b>rückgängig</b>.</div>",
                "positionCss": "top::460px::height::40vh"
            }
        },
        {
            "elements": ["#dj-image-wrapper", "#image-upload-wrapper"],
            "info": {
                "target": "#tour-guide-info",
                "content": "<div class=\"tour-guide-info-title\">Das wars!</div><div class=\"tour-guide-info-content\">Du bist nun ein ausgebildeter <b>MusicMagnet DJ</b>. Viel Spaß mit unserer App!</div>",
                "positionCss": "top::400px::height::40vh"
            }
        }
    ]
}